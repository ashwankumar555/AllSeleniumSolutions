<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="AutomationSuite" parallel="tests" thread-count="3">
<listeners>
    <listener class-name="listeners.AllureCategoryListener"/>
</listeners>

    <!-- Smoke Tests -->
    <test name="SmokeSuite" parallel="classes" thread-count="2">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="pageObjects.AddRemoveElements"/>
            <class name="pageObjects.Checkboxes"/>
        </classes>
    </test>
</suite>
